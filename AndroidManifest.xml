<?xml version="1.0" encoding="utf-8"?>
<manifest package="org.lyricue.android"
    android:versionCode="19"
    android:versionName="2.3" xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-sdk
        android:maxSdkVersion="18"
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".Lyricue"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:theme="@style/Theme.PageIndicatorDefaults" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Preferences"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name=".InitialSetup"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name=".UnableToAccess"
            android:theme="@android:style/Theme.NoTitleBar" />

        <service android:name=".LyricueDisplay" />
        
        <activity
            android:name="NotificationReceiver"
            android:excludeFromRecents="true"
            android:launchMode="singleTask" >
        </activity>
    </application>

</manifest>